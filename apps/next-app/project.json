{
  "name": "next-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/next-app",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project next-app --web",
  "targets": {
    "build": {
			"executor": "@nx/next:build",
			"outputs": [
				"{options.outputPath}"
			],
			"defaultConfiguration": "production",
			"options": {
				"outputPath": "dist/apps/next-app",
				"debug": false
			},
      "configurations": {
        "dev": {},
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/your-nextjs-app/.env.local",
              "with": "apps/your-nextjs-app/.env.production"
            }
          ]
        }
      }
    
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "next-app:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "next-app:build:development",
          "dev": true,
          "port": 3001,
          "turbo": false
        },  
        "production": {
          "buildTarget": "next-app:build:production",
          "dev": false,
          "port": 4200
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "next-app:build:production"
      }
    }
  }
}
